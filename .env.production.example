# Production Environment Variables
# COPY THIS TO .env AND FILL IN REAL VALUES

# ====================
# DATABASE (Required)
# ====================
DATABASE_URL="postgresql://postgres:CHANGE_ME_STRONG_PASSWORD@postgres:5432/paper_trading"

# ====================
# REDIS (Required)
# ====================
REDIS_URL="redis:6379"

# ====================
# JWT (Required - Generate a strong secret!)
# ====================
# Generate using: openssl rand -base64 64
JWT_SECRET="CHANGE_ME_GENERATE_STRONG_SECRET_MIN_64_CHARS"

# ====================
# PYTH NETWORK (Required)
# ====================
PYTH_NETWORK_URL="https://hermes.pyth.network"

# ====================
# API URLs (Update with your domain)
# ====================
API_BASE_URL="https://api.yourdomain.com"
WS_URL="wss://ws.yourdomain.com"

# ====================
# CORS (Required for production)
# ====================
CORS_ORIGIN="https://yourdomain.com"

# ====================
# RATE LIMITING
# ====================
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW_MS="60000"

# ====================
# ENVIRONMENT
# ====================
NODE_ENV="production"

# ====================
# OPTIONAL: Database Password for Docker
# ====================
POSTGRES_PASSWORD="CHANGE_ME_DB_PASSWORD"
